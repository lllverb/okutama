#map
:css
  #map{
    height: 400px;
    width: 80%;
    max-width: 800px;
    margin: 0 auto;
  }
:javascript
  var map;
  var marker;
  var center = {
        lat: 35.811352,
        lng: 139.158861
      };
  var infoWindow;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: center,
      zoom: 16
    });
    marker = new google.maps.Marker({ // マーカーの追加
      position: center, // マーカーを立てる位置を指定
      map: map // マーカーを立てる地図を指定
    });
    infoWindow = new google.maps.InfoWindow({ // 吹き出しの追加
        content: '<div class="sample">OKUTAMA</div>' // 吹き出しに表示する内容
    });
    marker.addListener('click', function() { // マーカーをクリックしたとき
     infoWindow.open(map, marker); // 吹き出しの表示
    });
  }
%script{:async => "", :defer => "defer", :src => "https://maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLEMAP']}&callback=initMap"}
